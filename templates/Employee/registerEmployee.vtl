	<title>Registro de empleado </title>
<script language="Javascript">
function ShowHourlyEmployee()
{
    document.getElementById("registrarEmpleadoPorHoras").style.visibility="visible";
    document.getElementById("registrarEmpleadoSueldoFijo").style.visibility="hidden";
    document.getElementById("registrarEmpleadoSueldoFijoComisionado").style.visibility="hidden";
}
function ShowSalariedyEmployee()
{
    document.getElementById("registrarEmpleadoSueldoFijo").style.visibility="visible";
    document.getElementById("registrarEmpleadoSueldoFijoComisionado").style.visibility="hidden";
    document.getElementById("registrarEmpleadoPorHoras").style.visibility="hidden";
}
function ShowSalariedComisionadedyEmployee()
{
    document.getElementById("registrarEmpleadoSueldoFijoComisionado").style.visibility="visible";
    document.getElementById("registrarEmpleadoSueldoFijo").style.visibility="hidden";
    document.getElementById("registrarEmpleadoPorHoras").style.visibility="hidden";
}
</script>
<body>
<div id = "inputDiv">
	<input  name="cat" type="radio" onClick="ShowHourlyEmployee()">Empleado por hora
	<input name="cat" type="radio" onClick="ShowSalariedyEmployee()">Empleado con sueldo fijo
	<input name="cat" type="radio" onClick="ShowSalariedComisionadedyEmployee()">Empleado con sueldo fijo y comision
	</div>
	<div style = "visibility:hidden" id="registrarEmpleadoPorHoras"> 
		<form method='post' action='/registrarEmpleadoPorHoras'>  
